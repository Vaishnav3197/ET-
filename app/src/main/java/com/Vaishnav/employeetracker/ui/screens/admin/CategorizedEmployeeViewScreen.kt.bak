/**
 * Filter and sort bottom sheet
 */
@OptIn(ExperimentalMaterial3Api::class)
@Composable
private fun FilterSortBottomSheet(
    currentSort: SortOption,
    onSortSelected: (SortOption) -> Unit,
    onDismiss: () -> Unit
) {
    ModalBottomSheet(
        onDismissRequest = onDismiss
    ) {
        Column(
            modifier = Modifier
                .fillMaxWidth()
                .padding(16.dp)
        ) {
            Text(
                text = "Sort By",
                style = MaterialTheme.typography.titleLarge,
                fontWeight = FontWeight.Bold,
                modifier = Modifier.padding(bottom = 16.dp)
            )
            
            SortOption.values().forEach { option ->
                Row(
                    modifier = Modifier
                        .fillMaxWidth()
                        .clickable {
                            onSortSelected(option)
                            onDismiss()
                        }
                        .padding(vertical = 12.dp),
                    horizontalArrangement = Arrangement.SpaceBetween,
                    verticalAlignment = Alignment.CenterVertically
                ) {
                    Row(
                        horizontalArrangement = Arrangement.spacedBy(12.dp),
                        verticalAlignment = Alignment.CenterVertically
                    ) {
                        Icon(
                            imageVector = option.icon,
                            contentDescription = null
                        )
                        Text(
                            text = option.displayName,
                            style = MaterialTheme.typography.bodyLarge
                        )
                    }
                    
                    if (option == currentSort) {
                        Icon(
                            imageVector = Icons.Default.Check,
                            contentDescription = "Selected",
                            tint = MaterialTheme.colorScheme.primary
                        )
                    }
                }
            }
            
            Spacer(modifier = Modifier.height(16.dp))
        }
    }
}

/**
 * Employee category enum
 */
enum class EmployeeCategory(
    val displayName: String,
    val icon: ImageVector
) {
    DEPARTMENT("Department", Icons.Default.Business),
    DESIGNATION("Designation", Icons.Default.Work),
    STATUS("Employment Status", Icons.Default.VerifiedUser),
    JOINING_DATE("Joining Date", Icons.Default.CalendarToday)
}

/**
 * Sort option enum
 */
enum class SortOption(
    val displayName: String,
    val icon: ImageVector
) {
    NAME_ASC("Name (A-Z)", Icons.Default.SortByAlpha),
    NAME_DESC("Name (Z-A)", Icons.Default.Sort),
    JOINING_NEW("Newest First", Icons.Default.NewReleases),
    JOINING_OLD("Oldest First", Icons.Default.History),
    DEPARTMENT("Department", Icons.Default.Business),
    DESIGNATION("Designation", Icons.Default.Work)
}

/**
 * Helper function to categorize and sort employees
 */
private fun categorizeAndSortEmployees(
    employees: List<FirebaseEmployee>,
    category: EmployeeCategory,
    sortOption: SortOption
): Map<String, List<FirebaseEmployee>> {
    // First, sort employees
    val sortedEmployees = when (sortOption) {
        SortOption.NAME_ASC -> employees.sortedBy { it.name }
        SortOption.NAME_DESC -> employees.sortedByDescending { it.name }
        SortOption.JOINING_NEW -> employees.sortedByDescending { it.joiningDate }
        SortOption.JOINING_OLD -> employees.sortedBy { it.joiningDate }
        SortOption.DEPARTMENT -> employees.sortedBy { it.department }
        SortOption.DESIGNATION -> employees.sortedBy { it.designation }
    }
    
    // Then, categorize employees
    return when (category) {
        EmployeeCategory.DEPARTMENT -> {
            sortedEmployees.groupBy { it.department.ifEmpty { "Unassigned" } }
                .toSortedMap()
        }
        EmployeeCategory.DESIGNATION -> {
            sortedEmployees.groupBy { it.designation.ifEmpty { "Unassigned" } }
                .toSortedMap()
        }
        EmployeeCategory.STATUS -> {
            sortedEmployees.groupBy { 
                if (it.isActive) "Active Employees" else "Inactive Employees"
            }
        }
        EmployeeCategory.JOINING_DATE -> {
            sortedEmployees.groupBy { 
                val year = java.util.Calendar.getInstance().apply {
                    timeInMillis = it.joiningDate
                }.get(java.util.Calendar.YEAR)
                year.toString()
            }.toSortedMap(compareByDescending { it })
        }
    }
}
