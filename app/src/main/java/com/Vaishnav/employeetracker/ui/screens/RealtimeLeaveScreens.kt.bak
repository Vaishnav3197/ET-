    leave: RealtimeLeaveRequest,
    adminId: String,
    adminName: String,
    viewModel: RealtimeLeaveViewModel,
    onDismiss: () -> Unit
) {
    var remarks by remember { mutableStateOf("") }
    
    AlertDialog(
        onDismissRequest = onDismiss,
        title = { Text("Approve Leave Request") },
        text = {
            Column {
                Text("Approve leave for ${leave.employeeName}?")
                Spacer(modifier = Modifier.height(8.dp))
                OutlinedTextField(
