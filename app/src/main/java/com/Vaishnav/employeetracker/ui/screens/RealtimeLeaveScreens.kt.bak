@Composable
private fun RejectLeaveDialog(
    leave: RealtimeLeaveRequest,
    adminId: String,
    adminName: String,
    viewModel: RealtimeLeaveViewModel,
    onDismiss: () -> Unit
) {
    var remarks by remember { mutableStateOf("") }
    
    AlertDialog(
        onDismissRequest = onDismiss,
        title = { Text("Reject Leave Request") },
        text = {
            Column {
                Text("Reject leave for ${leave.employeeName}?")
                Spacer(modifier = Modifier.height(8.dp))
                OutlinedTextField(
                    value = remarks,
                    onValueChange = { remarks = it },
                    label = { Text("Reason for rejection *") },
                    modifier = Modifier.fillMaxWidth(),
                    isError = remarks.isBlank()
                )
            }
        },
        confirmButton = {
            Button(
                onClick = {
                    if (remarks.isNotBlank()) {
                        viewModel.rejectLeaveRequest(
                            requestId = leave.id,
                            adminId = adminId,
                            adminName = adminName,
                            remarks = remarks,
                            onSuccess = onDismiss
                        )
                    }
                },
                enabled = remarks.isNotBlank()
            ) {
                Text("Reject")
            }
        },
        dismissButton = {
            TextButton(onClick = onDismiss) {
                Text("Cancel")
            }
        }
    )
}

private fun formatDate(timestamp: Long): String {
    val sdf = SimpleDateFormat("MMM dd, yyyy", Locale.getDefault())
    return sdf.format(Date(timestamp))
}
